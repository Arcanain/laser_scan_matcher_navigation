<launch>
  <!-- map -->
  <node pkg="map_server" type="map_server" name="map_server" args="$(find laser_scan_matcher_navigation)/maps/tukuba_environment/tukuba.yaml" output="screen">    
    <!-- Topic Name -->
    <remap from="map" to="/map" />
    <remap from="map_metadata" to="/map_metadata" />
    <!-- Frame Name -->
    <param name="frame_id" value="map" />
  </node>

  <!-- rviz -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find laser_scan_matcher_navigation)/rviz/tukuba_map.rviz"/>
</launch>